<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/album_item_height">

    <com.zhyen.android.picture_selected.ui.widget.RoundedRectangleImageView
        android:id="@+id/iv_album_cover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_album_cover"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@id/iv_album_cover"
        android:layout_toRightOf="@id/iv_album_cover"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/album_dropdown_title_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_album_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_album_name"
        android:layout_alignStart="@id/tv_album_name"
        android:layout_alignLeft="@id/tv_album_name"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/iv_album_cover"
        android:layout_toRightOf="@id/iv_album_cover"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?album_dropdown_count_color"
        android:textSize="14sp" />
</RelativeLayout>