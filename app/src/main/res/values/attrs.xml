<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="bottomToolbar_preview_textColor" format="reference|color" />
    <attr name="bottomToolbar_apply_textColor" format="reference|color" />
    <attr name="album_element_color" format="reference|color" />
    <attr name="album_emptyView_textColor" format="reference|color" />
    <attr name="album_emptyView" format="reference" />
    <attr name="album_thumbnail_placeholder" format="reference|color" />
    <attr name="album_dropdown_title_color" format="reference|color" />
    <attr name="album_dropdown_count_color" format="reference|color" />
    <attr name="listPopupWindowStyle" format="reference" />
    <attr name="item_placeholder" format="reference|color" />
    <attr name="capture_textColor" format="reference|color" />
    <attr name="item_checkCircle_borderColor" format="color|reference" />
    <attr name="item_checkCircle_backgroundColor" format="reference|color" />

    <declare-styleable name="BlurredView">
        <attr name="src" format="reference" />
        <attr name="move" format="boolean" />
        <attr name="disableBlurred" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="c_border_width" format="dimension" />
        <attr name="c_border_color" format="color" />
        <attr name="c_border_overlay" format="boolean" />
        <attr name="c_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CircularImageView">
        <attr name="civ_border" format="boolean" />
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_circle_color" format="color" />
        <attr name="civ_shadow" format="boolean" />
        <attr name="civ_shadow_color" format="color" />
        <attr name="civ_shadow_radius" format="float" />
        <attr name="civ_shadow_gravity">
            <flag name="center" value="1" />
            <flag name="top" value="2" />
            <flag name="bottom" value="3" />
            <flag name="start" value="4" />
            <flag name="end" value="5" />
        </attr>
    </declare-styleable>
</resources>